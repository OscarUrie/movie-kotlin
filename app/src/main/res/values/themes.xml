<resources>

    <style name="Theme.MovieAppKotlin" parent="Base.Theme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark_color</item>
        <item name="colorOnPrimary">@color/primary_text_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_dark_color</item>
        <item name="colorOnSecondary">@color/secondary_text_color</item>
        <item name="android:colorBackground">@color/primary_light_color</item>
        <item name="colorOnBackground">@color/primary_text_color</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_dark_color</item>
        <item name="android:navigationBarColor">@color/primary_color</item>
    </style>
</resources>